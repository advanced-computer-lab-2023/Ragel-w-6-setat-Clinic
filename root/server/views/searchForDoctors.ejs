<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #B3E5FC;
            color: #212121;
        }
        .container {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #bdbdbd;
            border-radius: 5px;
        }
        .primary-button {
            background-color: #0288D1;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .secondary-button {
            background-color: #03a9f4;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .form-group {
            margin-bottom: 10px;
        }
        label {
            color: #757575;
        }
        .divider {
            background-color: #bdbdbd;
            height: 1px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Doctor Search</h1>
        <form action="/search" method="POST">
            <div class="form-group">
                <label for="fName">First Name:</label>
                <input type="text" id="fName" name="fName" placeholder="Enter doctor's first name">
            </div>
            <div class="form-group">
                <label for="lName">Last Name:</label>
                <input type="text" id="lName" name="lName" placeholder="Enter doctor's last name">
            </div>
            <div class="form-group">
                <label for="specialty">Specialty:</label>
                <input type="text" id="specialty" name="specialty" placeholder="Enter specialty">
            </div>
            <div class="form-group">
                <label for="availabilityDate">Availability Date:</label>
                <input type="date" id="availabilityDate" name="availabilityDate">
            </div>
            <div class="form-group">
                <label for="availabilityTime">Availability Time:</label>
                <input type="time" id="availabilityTime" name="availabilityTime">
            </div>
            <button class="primary-button" type="submit">Search</button>
        </form>
        <div class="divider"></div>
        <h2>Search Results</h2>
        <!-- Display search results here -->
    </div>
</body>
</html>
