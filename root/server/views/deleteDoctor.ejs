<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Doctor</title>
    <style>
        body {
            background-color: #b3e5fc;
            /* Light Primary Color */
            color: #212121;
            /* Primary Text Color */
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .delete-doctor-container {
            background-color: #0288d1;
            /* Dark Primary Color */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            color: #ffffff;
        }

        input[type="text"] {
            width: calc(100% - 30px);
            padding: 8px;
            border: 1px solid #ffffff;
            /* Text/Icons Color */
            border-radius: 5px;
            background-color: ffffff;
            color: #212121;
            /* Text/Icons Color */
            margin-top: 10px;
        }

        button {
            background-color: #03a9f4;
            /* Primary Color */
            color: #ffffff;
            /* Text/Icons Color */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #448aff;
        }

        .feedback-message {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>

<body>
    <%- include("adminNavBar", {adminId: userId}) %>
        <div class="delete-doctor-container">
            <h2>Delete Doctor</h2>
            <form id="deleteDoctorForm">
                <input type="text" name="username" placeholder="Doctor Username" required><br>
                <button type="submit">Delete Doctor</button>
            </form>
            <div id="feedbackMessage"></div>

            <script>
                function deleteDoctor(username) {
                    fetch(`/admins/deleteDoctor?username=${username}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                // Handle successful deletion here, e.g., show a success message
                                document.getElementById("feedbackMessage").innerHTML = "Doctor deleted successfully!";
                                console.log("da5alna");
                                console.log("EL NAME AHO " + username);
                            } else {
                                // Handle errors
                                document.getElementById("feedbackMessage").innerHTML = "Failed to delete doctor.";
                                console.log("mada5alnash");
                                console.log("EL NAME AHO " + username);
                            }
                        })
                        .catch(error => {
                            // Handle network errors
                            console.error(error);
                            document.getElementById("feedbackMessage").innerHTML = "Network error occurred.";
                        });
                }

                document.getElementById("deleteDoctorForm").addEventListener("submit", function (event) {
                    event.preventDefault();
                    const formData = new FormData(this);
                    const doctorUsername = formData.get('username');
                    deleteDoctor(doctorUsername);
                });
            </script>
        </div>
</body>

</html>